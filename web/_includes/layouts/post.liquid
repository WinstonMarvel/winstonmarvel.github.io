---
layout: layouts/core/base.liquid
permalink: "/posts/{{ title | slugify }}/"
---

<section class="banner is-flex is-flex-wrap-wrap is-align-items-center is-justify-content-center">
    <h2 class="title is-3 has-text-centered has-text-white has-text-weight-normal">Everlasting love
        <div class="heart">
            <span class="fas fa-heart"></span>
        </div>
    </h2>
</section>

{% include 'social-share' %}

<article class="post container px-5 pt-5 mt-5 pb-5">
    <div class="content post-content mb-5">
        <h1 class="title mt-5 is-3 is-spaced mb-3">{{title}}</h1>
        <div class="featured-image mb-5">
            <div class="post-meta is-spaced mb-3">
                <span class="by-line">By Winston Jude </span>
                <span class="on ">on {{ date | date: "%B %d, %Y" }} </span>
            </div>
            <img src="/img/blog/{{featured_image}}" alt="{{title}}" class="image">
        </div>
        {{ content }} 
    </div>
</article>

<section class="comments">
    <div data-chirpy-comment="true" class="container px-3"></div>
</section>